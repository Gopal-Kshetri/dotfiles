## global color var
set $based3    #002b36
set $based2    #073642
set $based1    #586e75
set $based0    #657b83
set $base0     #839496
set $base1     #93a1a1
set $base2     #eee8d5
set $base3     #fdf6e3
set $yellow    #b58900
set $orange    #cb4b16
set $red       #dc322f
set $magenta   #d33682
set $violet    #6c71c4
set $blue      #268bd2
set $cyan      #2aa198
set $green     #859900


# client color setting
client.focused            $based3   $based2   $base3   $based3  $based2
client.focused_inactive   $based3   $based3   $base0   $based3  $based3
client.unfocused          $based3   $based3   $base0   $based3  $based3
client.urgent             $based3   $magenta  $base3   $based3  $magenta

set $mod Mod4

font pango: JetBrainsMono Nerd Font:size=10
# font pango: Hack Nerd Font 14
# font pango: Iosevka Regular 14
# font pango: DejaVu Sans Mono 14
# font pango: FiraCode Nerd Font 14


# Config about what you wants to run after you starts your system
exec --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id nm-applet
# exec_always --no-startup-id fcitx
exec_always --no-startup-id compton -b
exec_always --no-startup-id udiskie # Auto mount your moveable disk
exec --no-startup-id variety

# audio ctrl
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# control brigtness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

floating_modifier $mod
bindsym $mod+Return exec kitty
# bindsym $mod+s exec dmenu_run
bindsym $mod+s exec rofi -show combi
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $mod+e exec thunar
bindsym $mod+Shift+f exec firefox
bindsym $mod+Shift+b exec brave-beta

# Close focused window
bindsym $mod+Shift+q kill
bindsym $mod+Ctrl+l exec i3lock-fancy

## Clipboard Screenshots
# bindsym --release Print exec --no-startup-id flameshot gui
bindsym Control+Shift+s exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Control+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Control+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# Change the focus window
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Move the window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

# Config about the workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
# cycle between workspace
bindsym $mod+Ctrl+n     workspace next
bindsym $mod+Ctrl+p     workspace prev
bindsym $mod+Tab        workspace next
bindsym $mod+Shift+Tab  workspace prev
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left  workspace prev


# i3 reload restart and exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


# Resize the window
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym i resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

